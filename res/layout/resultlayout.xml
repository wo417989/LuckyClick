<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/starLevel" android:orientation="horizontal" android:gravity="center_horizontal">
        <ImageView android:id="@+id/starImg_1" android:layout_width="wrap_content" 
            android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/starImg_2" android:layout_width="wrap_content" 
            android:layout_height="wrap_content" android:layout_toRightOf="@id/starImg_1"/>
        <ImageView android:id="@+id/starImg_3" android:layout_width="wrap_content" 
            android:layout_height="wrap_content" android:layout_toRightOf="@id/starImg_2"/>
        <ImageView android:id="@+id/starImg_4" android:layout_width="wrap_content" 
            android:layout_height="wrap_content" android:layout_toRightOf="@id/starImg_3"/>
        <ImageView android:id="@+id/starImg_5" android:layout_width="wrap_content" 
            android:layout_height="wrap_content" android:layout_toRightOf="@id/starImg_4"/>
    </RelativeLayout>
    <TextView android:text="" android:id="@+id/resultText"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>